          <stringProp name="parameters"></stringProp>
          <stringProp name="script">import org.apache.kafka.clients.producer.KafkaProducer;
import org.apache.kafka.clients.producer.ProducerRecord;

try {
	//Set connection properties
	Properties props = new Properties();
	props.put(&quot;bootstrap.servers&quot;, &quot;localhost:9092&quot;);
	props.put(&quot;key.serializer&quot;, &quot;org.apache.kafka.common.serialization.StringSerializer&quot;);
	props.put(&quot;value.serializer&quot;, &quot;org.apache.kafka.common.serialization.StringSerializer&quot;);
	//Establish Connection
	KafkaProducer&lt;String, String&gt; producer = new KafkaProducer&lt;String, String&gt;(props);

	//Declare number of messages
	int sample=1000,fail=0;

	//Sub loop to send messages
	for(int i=0;i&lt;sample;i++) {
		try {
			//Set Data
			ProducerRecord&lt;String, String&gt; producerRecord = new ProducerRecord&lt;String, String&gt;(&quot;test&quot;, Integer.toString(i), &quot;value&quot;+${__Random(1,100000000,)});
			producer.send(producerRecord);
			producerRecord=null;
		} catch (Exception e) {
			log.error(&quot;&quot; + e);
			fail=fail+1;
		}
		//Set results as per executions
		if(fail&gt;0) {
			SampleResult.setErrorCount(fail);
			SampleResult.setSuccessful(false);
		} else {
			SampleResult.setSuccessful(true);
		}
	}

	//Close
	producer.close();
	producer=null;
	props=null;
} catch (Exception e) {
	log.error(&quot;&quot; + e);
	log.error(&quot;Failed to cconnect to Kafka&quot;);
	SampleResult.setSuccessful(false);
}</stringProp>
